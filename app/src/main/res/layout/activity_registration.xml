<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A0A0A">

    <RelativeLayout
        android:id="@+id/signup_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Create Account"
            android:textColor="#D8D8D8"
            android:textSize="18sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:text="Sign Up"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/ask_btn_selector"
            android:id="@+id/signup_btn" />
    </RelativeLayout>

    <TextView
        android:id="@+id/validation_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_header"
        android:background="#FF0000"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/signup_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing,I agree to Taxi&apos;s"
            android:textColor="#D8D8D8"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="User Agreement and Terms of Services"
            android:textColor="#0080FF"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/signup_footer"
        android:layout_below="@id/validation_tv"
        android:layout_margin="10dp"
        android:background="@drawable/round_background"
        android:orientation="vertical" >

        <com.taxi.utils.FloatingHintEditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="Email(username)"
            style="@style/Widget.AppCompat.EditText"
            android:inputType="textEmailAddress"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E6E6E6" />

        <com.taxi.utils.FloatingHintEditText
            android:id="@+id/set_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            style="@style/Widget.AppCompat.EditText"
            android:hint="Set Password"
            android:inputType="textPassword"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E6E6E6" />

        <com.taxi.utils.FloatingHintEditText
            android:id="@+id/re_enter_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            style="@style/Widget.AppCompat.EditText"
            android:hint="Re enter Password"
            android:inputType="textPassword"
            android:paddingBottom="2dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E6E6E6" />

        <com.taxi.utils.FloatingHintEditText
            android:id="@+id/full_name_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="Full Name"
            style="@style/Widget.AppCompat.EditText"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E6E6E6" />

        <com.taxi.utils.FloatingHintEditText
            android:id="@+id/enter_mob_no_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            style="@style/Widget.AppCompat.EditText"
            android:hint="Enter 10 digit Mobile Number"
            android:inputType="phone"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E6E6E6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.taxi.utils.FloatingHintEditText
                android:id="@+id/referrel_code_et"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@null"
                style="@style/Widget.AppCompat.EditText"
                android:hint="Enter Referral Code"
                android:inputType="text"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/referral_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:src="@drawable/refereal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E6E6E6" />
    </LinearLayout>

</RelativeLayout>